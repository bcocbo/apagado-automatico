# Namespace Startup Scheduler - Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
DYNAMODB_TABLE_NAME=NamespaceSchedules
S3_BUCKET_NAME=namespace-scheduler-config-prod-123456789012
S3_CONFIG_KEY=config.json

# EKS Configuration
EKS_CLUSTER_NAME=my-eks-cluster
KUBERNETES_NAMESPACE=encendido-eks

# Application Configuration
ENVIRONMENT=development
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
MAX_NAMESPACES_LIMIT=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1

# Scheduler Configuration
SCHEDULER_INTERVAL_MINUTES=1
TIMEZONE=America/Bogota

# Monitoring Configuration
METRICS_PORT=8080
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_TIMEOUT=30

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2
RETRY_MAX_DELAY=60

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Configuration (only for local development)
# REACT_APP_API_URL=http://localhost:8080/api
# NODE_ENV=development